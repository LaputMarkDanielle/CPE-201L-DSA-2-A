        "import tkinter as tk\n",
        "from tkinter import ttk, messagebox\n",
        "from datetime import datetime, timedelta\n",
        "import json\n",
        "import os\n",
        "import threading\n",
        "import time\n",
        "import calendar\n",
        "\n",
        "\n",
        "class Snackbar:\n",
        "    def __init__(self, parent):\n",
        "        self.parent = parent\n",
        "        self.snackbar = None\n",
        "\n",
        "    def show(self, message, duration=3000):\n",
        "        # Remove existing snackbar\n",
        "        if self.snackbar:\n",
        "            self.snackbar.destroy()\n",
        "\n",
        "        # Create snackbar\n",
        "        self.snackbar = tk.Frame(self.parent, bg='#323232', relief='flat')\n",
        "        self.snackbar.place(relx=0.5, rely=0.9, anchor='center')\n",
        "\n",
        "        label = tk.Label(self.snackbar, text=message, fg='white', bg='#323232',\n",
        "                         font=('Arial', 10), padx=20, pady=10)\n",
        "        label.pack()\n",
        "\n",
        "        # Auto-hide after duration\n",
        "        self.parent.after(duration, self.hide)\n",
        "\n",
        "    def hide(self):\n",
        "        if self.snackbar:\n",
        "            self.snackbar.destroy()\n",
        "            self.snackbar = None\n",
        "\n",
        "\n",
        "class DatePicker:\n",
        "    def __init__(self, parent):\n",
        "        self.parent = parent\n",
        "        self.result = None\n",
        "        self.dialog = None\n",
        "\n",
        "    def show(self):\n",
        "        self.dialog = tk.Toplevel(self.parent)\n",
        "        self.dialog.title(\"Select Date\")\n",
        "        self.dialog.geometry(\"300x300\")\n",
        "        self.dialog.transient(self.parent)\n",
        "        self.dialog.grab_set()\n",
        "        self.dialog.configure(bg='white')\n",
        "\n",
        "        # Center the dialog\n",
        "        self.dialog.update_idletasks()\n",
        "        x = self.parent.winfo_rootx() + (self.parent.winfo_width() - self.dialog.winfo_width()) // 2\n",
        "        y = self.parent.winfo_rooty() + (self.parent.winfo_height() - self.dialog.winfo_height()) // 2\n",
        "        self.dialog.geometry(f\"+{x}+{y}\")\n",
        "\n",
        "        # Current date\n",
        "        now = datetime.now()\n",
        "        self.current_year = now.year\n",
        "        self.current_month = now.month\n",
        "\n",
        "        # Header with navigation\n",
        "        header_frame = tk.Frame(self.dialog, bg='white')\n",
        "        header_frame.pack(fill=tk.X, padx=10, pady=10)\n",
        "\n",
        "        tk.Button(header_frame, text=\"‚óÄ\", command=self.previous_month,\n",
        "                  font=('Arial', 12), bg='#f0f0f0', relief='flat').pack(side=tk.LEFT)\n",
        "\n",
        "        self.month_label = tk.Label(header_frame, text=\"\", font=('Arial', 12, 'bold'), bg='white')\n",
        "        self.month_label.pack(side=tk.LEFT, expand=True)\n",
        "\n",
        "        tk.Button(header_frame, text=\"‚ñ∂\", command=self.next_month,\n",
        "                  font=('Arial', 12), bg='#f0f0f0', relief='flat').pack(side=tk.LEFT)\n",
        "\n",
        "        # Calendar frame\n",
        "        self.cal_frame = tk.Frame(self.dialog, bg='white')\n",
        "        self.cal_frame.pack(fill=tk.BOTH, expand=True, padx=10, pady=10)\n",
        "\n",
        "        self.update_calendar()\n",
        "\n",
        "        # Today button\n",
        "        tk.Button(self.dialog, text=\"Today\", command=self.select_today,\n",
        "                  bg='#2196F3', fg='white', font=('Arial', 10), relief='flat').pack(pady=10)\n",
        "\n",
        "        self.dialog.wait_window()\n",
        "        return self.result\n",
        "\n",
        "    def update_calendar(self):\n",
        "        # Clear previous calendar\n",
        "        for widget in self.cal_frame.winfo_children():\n",
        "            widget.destroy()\n",
        "\n",
        "        # Month and year label\n",
        "        month_name = calendar.month_name[self.current_month]\n",
        "        self.month_label.config(text=f\"{month_name} {self.current_year}\")\n",
        "\n",
        "        # Day headers\n",
        "        days = [\"Mo\", \"Tu\", \"We\", \"Th\", \"Fr\", \"Sa\", \"Su\"]\n",
        "        for i, day in enumerate(days):\n",
        "            tk.Label(self.cal_frame, text=day, font=('Arial', 9, 'bold'),\n",
        "                     width=4, height=2, bg='white').grid(row=0, column=i, sticky='nsew')\n",
        "\n",
        "        # Get calendar matrix\n",
        "        cal = calendar.monthcalendar(self.current_year, self.current_month)\n",
        "\n",
        "        # Create day buttons\n",
        "        for week_num, week in enumerate(cal):\n",
        "            for day_num, day in enumerate(week):\n",
        "                if day != 0:\n",
        "                    btn = tk.Button(self.cal_frame, text=str(day), width=4, height=2,\n",
        "                                    command=lambda d=day: self.select_date(d),\n",
        "                                    font=('Arial', 9), bg='white', relief='flat')\n",
        "\n",
        "                    # Highlight today\n",
        "                    now = datetime.now()\n",
        "                    if (day == now.day and self.current_month == now.month and\n",
        "                            self.current_year == now.year):\n",
        "                        btn.config(bg='#2196F3', fg='white')\n",
        "\n",
        "                    btn.grid(row=week_num + 1, column=day_num, sticky='nsew')\n",
        "\n",
        "        # Configure grid weights\n",
        "        for i in range(7):\n",
        "            self.cal_frame.columnconfigure(i, weight=1)\n",
        "        for i in range(7):\n",
        "            self.cal_frame.rowconfigure(i, weight=1)\n",
        "\n",
        "    def previous_month(self):\n",
        "        self.current_month -= 1\n",
        "        if self.current_month < 1:\n",
        "            self.current_month = 12\n",
        "            self.current_year -= 1\n",
        "        self.update_calendar()\n",
        "\n",
        "    def next_month(self):\n",
        "        self.current_month += 1\n",
        "        if self.current_month > 12:\n",
        "            self.current_month = 1\n",
        "            self.current_year += 1\n",
        "        self.update_calendar()\n",
        "\n",
        "    def select_date(self, day):\n",
        "        self.result = datetime(self.current_year, self.current_month, day)\n",
        "        self.dialog.destroy()\n",
        "\n",
        "    def select_today(self):\n",
        "        self.result = datetime.now()\n",
        "        self.dialog.destroy()\n",
        "\n",
        "\n",
        "class TimePicker:\n",
        "    def __init__(self, parent):\n",
        "        self.parent = parent\n",
        "        self.result = None\n",
        "        self.dialog = None\n",
        "\n",
        "    def show(self):\n",
        "        self.dialog = tk.Toplevel(self.parent)\n",
        "        self.dialog.title(\"Select Time\")\n",
        "        self.dialog.geometry(\"250x300\")\n",
        "        self.dialog.transient(self.parent)\n",
        "        self.dialog.grab_set()\n",
        "        self.dialog.configure(bg='white')\n",
        "\n",
        "        # Center the dialog\n",
        "        self.dialog.update_idletasks()\n",
        "        x = self.parent.winfo_rootx() + (self.parent.winfo_width() - self.dialog.winfo_width()) // 2\n",
        "        y = self.parent.winfo_rooty() + (self.parent.winfo_height() - self.dialog.winfo_height()) // 2\n",
        "        self.dialog.geometry(f\"+{x}+{y}\")\n",
        "\n",
        "        # Current time\n",
        "        now = datetime.now()\n",
        "        self.hour = now.hour\n",
        "        self.minute = now.minute\n",
        "\n",
        "        # Time display\n",
        "        self.time_label = tk.Label(self.dialog, text=self.get_time_string(),\n",
        "                                   font=('Arial', 20, 'bold'), bg='white')\n",
        "        self.time_label.pack(pady=20)\n",
        "\n",
        "        # Controls frame\n",
        "        controls_frame = tk.Frame(self.dialog, bg='white')\n",
        "        controls_frame.pack(pady=10)\n",
        "\n",
        "        # Hour controls\n",
        "        hour_frame = tk.Frame(controls_frame, bg='white')\n",
        "        hour_frame.pack(side=tk.LEFT, padx=10)\n",
        "\n",
        "        tk.Label(hour_frame, text=\"Hour\", font=('Arial', 10, 'bold'), bg='white').pack()\n",
        "\n",
        "        tk.Button(hour_frame, text=\"‚ñ≤\", command=self.hour_up,\n",
        "                  font=('Arial', 12), width=3, bg='#f0f0f0', relief='flat').pack()\n",
        "        tk.Button(hour_frame, text=\"‚ñº\", command=self.hour_down,\n",
        "                  font=('Arial', 12), width=3, bg='#f0f0f0', relief='flat').pack()\n",
        "\n",
        "        # Minute controls\n",
        "        minute_frame = tk.Frame(controls_frame, bg='white')\n",
        "        minute_frame.pack(side=tk.LEFT, padx=10)\n",
        "\n",
        "        tk.Label(minute_frame, text=\"Minute\", font=('Arial', 10, 'bold'), bg='white').pack()\n",
        "\n",
        "        tk.Button(minute_frame, text=\"‚ñ≤\", command=self.minute_up,\n",
        "                  font=('Arial', 12), width=3, bg='#f0f0f0', relief='flat').pack()\n",
        "        tk.Button(minute_frame, text=\"‚ñº\", command=self.minute_down,\n",
        "                  font=('Arial', 12), width=3, bg='#f0f0f0', relief='flat').pack()\n",
        "\n",
        "        # AM/PM toggle\n",
        "        ampm_frame = tk.Frame(controls_frame, bg='white')\n",
        "        ampm_frame.pack(side=tk.LEFT, padx=10)\n",
        "\n",
        "        tk.Label(ampm_frame, text=\"AM/PM\", font=('Arial', 10, 'bold'), bg='white').pack()\n",
        "\n",
        "        self.ampm_btn = tk.Button(ampm_frame, text=\"AM\" if self.hour < 12 else \"PM\",\n",
        "                                  command=self.toggle_ampm, font=('Arial', 10), width=4,\n",
        "                                  bg='#f0f0f0', relief='flat')\n",
        "        self.ampm_btn.pack()\n",
        "\n",
        "        # Quick select buttons\n",
        "        quick_frame = tk.Frame(self.dialog, bg='white')\n",
        "        quick_frame.pack(pady=10)\n",
        "\n",
        "        times = [\"09:00\", \"12:00\", \"15:00\", \"18:00\", \"21:00\"]\n",
        "        for time_str in times:\n",
        "            tk.Button(quick_frame, text=time_str,\n",
        "                      command=lambda t=time_str: self.quick_select(t),\n",
        "                      font=('Arial', 9), bg='#e0e0e0', relief='flat').pack(side=tk.LEFT, padx=2)\n",
        "\n",
        "        # Action buttons\n",
        "        action_frame = tk.Frame(self.dialog, bg='white')\n",
        "        action_frame.pack(pady=10)\n",
        "\n",
        "        tk.Button(action_frame, text=\"Now\", command=self.select_now,\n",
        "                  bg='#4CAF50', fg='white', font=('Arial', 10), relief='flat').pack(side=tk.LEFT, padx=5)\n",
        "\n",
        "        tk.Button(action_frame, text=\"OK\", command=self.confirm,\n",
        "                  bg='#2196F3', fg='white', font=('Arial', 10), relief='flat').pack(side=tk.LEFT, padx=5)\n",
        "\n",
        "        tk.Button(action_frame, text=\"Cancel\", command=self.cancel,\n",
        "                  bg='#f44336', fg='white', font=('Arial', 10), relief='flat').pack(side=tk.LEFT, padx=5)\n",
        "\n",
        "        self.dialog.wait_window()\n",
        "        return self.result\n",
        "\n",
        "    def get_time_string(self):\n",
        "        hour_12 = self.hour % 12\n",
        "        if hour_12 == 0:\n",
        "            hour_12 = 12\n",
        "        am_pm = \"AM\" if self.hour < 12 else \"PM\"\n",
        "        return f\"{hour_12:02d}:{self.minute:02d} {am_pm}\"\n",
        "\n",
        "    def update_display(self):\n",
        "        self.time_label.config(text=self.get_time_string())\n",
        "        self.ampm_btn.config(text=\"AM\" if self.hour < 12 else \"PM\")\n",
        "\n",
        "    def hour_up(self):\n",
        "        self.hour = (self.hour + 1) % 24\n",
        "        self.update_display()\n",
        "\n",
        "    def hour_down(self):\n",
        "        self.hour = (self.hour - 1) % 24\n",
        "        self.update_display()\n",
        "\n",
        "    def minute_up(self):\n",
        "        self.minute = (self.minute + 1) % 60\n",
        "        self.update_display()\n",
        "\n",
        "    def minute_down(self):\n",
        "        self.minute = (self.minute - 1) % 60\n",
        "        self.update_display()\n",
        "\n",
        "    def toggle_ampm(self):\n",
        "        if self.hour < 12:\n",
        "            self.hour += 12\n",
        "        else:\n",
        "            self.hour -= 12\n",
        "        self.update_display()\n",
        "\n",
        "    def quick_select(self, time_str):\n",
        "        hour, minute = map(int, time_str.split(':'))\n",
        "        self.hour = hour\n",
        "        self.minute = minute\n",
        "        self.update_display()\n",
        "\n",
        "    def select_now(self):\n",
        "        now = datetime.now()\n",
        "        self.hour = now.hour\n",
        "        self.minute = now.minute\n",
        "        self.update_display()\n",
        "\n",
        "    def confirm(self):\n",
        "        self.result = datetime(2000, 1, 1, self.hour, self.minute)  # Date doesn't matter\n",
        "        self.dialog.destroy()\n",
        "\n",
        "    def cancel(self):\n",
        "        self.result = None\n",
        "        self.dialog.destroy()\n",
        "\n",
        "\n",
        "class TaskReminderApp:\n",
        "    def __init__(self, root):\n",
        "        self.root = root\n",
        "        self.root.title(\"Task Reminder Pro\")\n",
        "        self.root.geometry(\"600x700\")\n",
        "        self.root.configure(bg='#f5f5f5')\n",
        "\n",
        "        # Initialize snackbar\n",
        "        self.snackbar = Snackbar(root)\n",
        "\n",
        "        # Dark mode support\n",
        "        self.dark_mode = False\n",
        "        self.colors = {\n",
        "            'light': {\n",
        "                'bg': '#f5f5f5', 'card': '#ffffff', 'text': '#212121',\n",
        "                'accent': '#2196F3', 'secondary': '#757575', 'error': '#f44336',\n",
        "                'success': '#4CAF50', 'warning': '#FF9800'\n",
        "            },\n",
        "            'dark': {\n",
        "                'bg': '#1e1e1e', 'card': '#2d2d2d', 'text': '#ffffff',\n",
        "                'accent': '#BB86FC', 'secondary': '#b0b0b0', 'error': '#cf6679',\n",
        "                'success': '#03DAC6', 'warning': '#FFB74D'\n",
        "            }\n",
        "        }\n",
        "\n",
        "        self.tasks_file = \"tasks.json\"\n",
        "        self.tasks = []\n",
        "        self.selected_date = None\n",
        "        self.selected_time = None\n",
        "\n",
        "        self.setup_ui()\n",
        "        self.load_tasks()\n",
        "        self.start_reminder_checker()\n",
        "\n",
        "    def get_color(self, color_type):\n",
        "        mode = 'dark' if self.dark_mode else 'light'\n",
        "        return self.colors[mode][color_type]\n",
        "\n",
        "    def setup_ui(self):\n",
        "        # Main container\n",
        "        self.main_frame = tk.Frame(self.root, bg=self.get_color('bg'), padx=20, pady=20)\n",
        "        self.main_frame.pack(fill=tk.BOTH, expand=True)\n",
        "\n",
        "        # Header with modern design\n",
        "        header_frame = tk.Frame(self.main_frame, bg=self.get_color('bg'))\n",
        "        header_frame.pack(fill=tk.X, pady=(0, 20))\n",
        "\n",
        "        title_label = tk.Label(header_frame, text=\"üìù Task Reminder Pro\",\n",
        "                               font=('Arial', 20, 'bold'),\n",
        "                               bg=self.get_color('bg'),\n",
        "                               fg=self.get_color('accent'))\n",
        "        title_label.pack(side=tk.LEFT)\n",
        "\n",
        "        # Theme toggle with modern icon\n",
        "        self.theme_btn = tk.Button(header_frame, text=\"üåì\", command=self.toggle_theme,\n",
        "                                   font=('Arial', 14), width=3, relief='flat',\n",
        "                                   bg=self.get_color('accent'), fg='white')\n",
        "        self.theme_btn.pack(side=tk.RIGHT)\n",
        "\n",
        "        # Input card with material design\n",
        "        input_card = tk.Frame(self.main_frame, bg=self.get_color('card'),\n",
        "                              padx=20, pady=20, relief='flat', bd=1)\n",
        "        input_card.pack(fill=tk.X, pady=(0, 20))\n",
        "\n",
        "        # Task input with modern styling\n",
        "        task_label = tk.Label(input_card, text=\"Task Name\", bg=self.get_color('card'),\n",
        "                              fg=self.get_color('secondary'), font=('Arial', 10, 'bold'))\n",
        "        task_label.pack(anchor=tk.W)\n",
        "\n",
        "        self.task_var = tk.StringVar()\n",
        "        task_entry = tk.Entry(input_card, textvariable=self.task_var,\n",
        "                              font=('Arial', 12), relief='flat', bd=0,\n",
        "                              bg=self.get_color('card'), fg=self.get_color('text'),\n",
        "                              insertbackground=self.get_color('text'))\n",
        "        task_entry.pack(fill=tk.X, pady=(5, 15))\n",
        "\n",
        "        # Add underline effect\n",
        "        underline = tk.Frame(input_card, height=2, bg=self.get_color('accent'))\n",
        "        underline.pack(fill=tk.X, pady=(0, 20))\n",
        "\n",
        "        # Date/Time selection with modern buttons\n",
        "        datetime_frame = tk.Frame(input_card, bg=self.get_color('card'))\n",
        "        datetime_frame.pack(fill=tk.X, pady=(0, 15))\n",
        "\n",
        "        # Date button\n",
        "        date_btn = tk.Button(datetime_frame, text=\"üìÖ SELECT DATE\",\n",
        "                             command=self.pick_date, font=('Arial', 10, 'bold'),\n",
        "                             bg=self.get_color('accent'), fg='white',\n",
        "                             relief='flat', padx=15, pady=8)\n",
        "        date_btn.pack(side=tk.LEFT, padx=(0, 10))\n",
        "\n",
        "        # Time button\n",
        "        time_btn = tk.Button(datetime_frame, text=\"‚è∞ SELECT TIME\",\n",
        "                             command=self.pick_time, font=('Arial', 10, 'bold'),\n",
        "                             bg=self.get_color('accent'), fg='white',\n",
        "                             relief='flat', padx=15, pady=8)\n",
        "        time_btn.pack(side=tk.LEFT)\n",
        "\n",
        "        # Selected datetime display\n",
        "        self.datetime_label = tk.Label(datetime_frame, text=\"No date/time selected\",\n",
        "                                       fg=self.get_color('secondary'), bg=self.get_color('card'),\n",
        "                                       font=('Arial', 9))\n",
        "        self.datetime_label.pack(side=tk.RIGHT)\n",
        "\n",
        "        # Add task button (Floating Action Button style)\n",
        "        add_btn = tk.Button(input_card, text=\"‚ûï ADD TASK\", command=self.add_task,\n",
        "                            font=('Arial', 11, 'bold'), bg=self.get_color('success'),\n",
        "                            fg='white', relief='flat', padx=30, pady=12,\n",
        "                            cursor='hand2')\n",
        "        add_btn.pack(pady=(10, 0))\n",
        "\n",
        "        # Tasks list section\n",
        "        tasks_header = tk.Frame(self.main_frame, bg=self.get_color('bg'))\n",
        "        tasks_header.pack(fill=tk.X, pady=(0, 10))\n",
        "\n",
        "        tasks_label = tk.Label(tasks_header, text=\"Your Tasks\",\n",
        "                               font=('Arial', 14, 'bold'), bg=self.get_color('bg'),\n",
        "                               fg=self.get_color('text'))\n",
        "        tasks_label.pack(side=tk.LEFT)\n",
        "\n",
        "        tasks_count = tk.Label(tasks_header, text=\"0 tasks\",\n",
        "                               font=('Arial', 10), bg=self.get_color('bg'),\n",
        "                               fg=self.get_color('secondary'))\n",
        "        tasks_count.pack(side=tk.RIGHT)\n",
        "        self.tasks_count_label = tasks_count\n",
        "\n",
        "        # Tasks container with modern scrollable list\n",
        "        tasks_container = tk.Frame(self.main_frame, bg=self.get_color('bg'))\n",
        "        tasks_container.pack(fill=tk.BOTH, expand=True)\n",
        "\n",
        "        # Create a canvas and scrollbar for the tasks\n",
        "        self.canvas = tk.Canvas(tasks_container, bg=self.get_color('bg'),\n",
        "                                highlightthickness=0, relief='flat')\n",
        "        scrollbar = tk.Scrollbar(tasks_container, orient=\"vertical\",\n",
        "                                 command=self.canvas.yview)\n",
        "        self.scrollable_frame = tk.Frame(self.canvas, bg=self.get_color('bg'))\n",
        "\n",
        "        self.scrollable_frame.bind(\n",
        "            \"<Configure>\",\n",
        "            lambda e: self.canvas.configure(scrollregion=self.canvas.bbox(\"all\"))\n",
        "        )\n",
        "\n",
        "        self.canvas.create_window((0, 0), window=self.scrollable_frame, anchor=\"nw\")\n",
        "        self.canvas.configure(yscrollcommand=scrollbar.set)\n",
        "\n",
        "        self.canvas.pack(side=\"left\", fill=\"both\", expand=True)\n",
        "        scrollbar.pack(side=\"right\", fill=\"y\")\n",
        "\n",
        "        # Bind mousewheel to canvas\n",
        "        self.canvas.bind(\"<MouseWheel>\", self._on_mousewheel)\n",
        "\n",
        "        # Reset all tasks button\n",
        "        controls_frame = tk.Frame(self.main_frame, bg=self.get_color('bg'))\n",
        "        controls_frame.pack(fill=tk.X, pady=(15, 0))\n",
        "\n",
        "        reset_btn = tk.Button(controls_frame, text=\"üóëÔ∏è RESET ALL TASKS\",\n",
        "                              command=self.reset_all_tasks, font=('Arial', 10),\n",
        "                              bg=self.get_color('error'), fg='white',\n",
        "                              relief='flat', padx=20, pady=8)\n",
        "        reset_btn.pack(side=tk.LEFT)\n",
        "\n",
        "        # Status bar\n",
        "        self.status_var = tk.StringVar(value=\"‚úÖ Tasks auto-saved locally\")\n",
        "        status_label = tk.Label(self.main_frame, textvariable=self.status_var,\n",
        "                                fg=self.get_color('success'), font=('Arial', 9),\n",
        "                                bg=self.get_color('bg'))\n",
        "        status_label.pack(side=tk.BOTTOM, pady=(10, 0))\n",
        "\n",
        "        # Configure grid weights\n",
        "        self.main_frame.columnconfigure(0, weight=1)\n",
        "        self.main_frame.rowconfigure(2, weight=1)\n",
        "\n",
        "    def _on_mousewheel(self, event):\n",
        "        self.canvas.yview_scroll(int(-1 * (event.delta / 120)), \"units\")\n",
        "\n",
        "    def toggle_theme(self):\n",
        "        self.dark_mode = not self.dark_mode\n",
        "        self.theme_btn.config(text=\"‚òÄÔ∏è\" if self.dark_mode else \"üåô\")\n",
        "        self.apply_theme()\n",
        "        self.save_tasks()\n",
        "        self.show_snackbar(\"Theme changed\")\n",
        "\n",
        "    def apply_theme(self):\n",
        "        # Update all colors\n",
        "        self.root.configure(bg=self.get_color('bg'))\n",
        "        self.main_frame.configure(bg=self.get_color('bg'))\n",
        "        self.canvas.configure(bg=self.get_color('bg'))\n",
        "        self.scrollable_frame.configure(bg=self.get_color('bg'))\n",
        "\n",
        "        # Update all child widgets\n",
        "        self.refresh_tasks_list()\n",
        "        self.update_tasks_count()\n",
        "\n",
        "    def pick_date(self):\n",
        "        date_picker = DatePicker(self.root)\n",
        "        date = date_picker.show()\n",
        "        if date:\n",
        "            self.selected_date = date\n",
        "            self.update_datetime_label()\n",
        "            self.show_snackbar(\"Date selected\")\n",
        "\n",
        "    def pick_time(self):\n",
        "        time_picker = TimePicker(self.root)\n",
        "        time_obj = time_picker.show()\n",
        "        if time_obj:\n",
        "            self.selected_time = time_obj\n",
        "            self.update_datetime_label()\n",
        "            self.show_snackbar(\"Time selected\")\n",
        "\n",
        "    def update_datetime_label(self):\n",
        "        if self.selected_date and self.selected_time:\n",
        "            combined = datetime(\n",
        "                self.selected_date.year, self.selected_date.month, self.selected_date.day,\n",
        "                self.selected_time.hour, self.selected_time.minute\n",
        "            )\n",
        "            self.datetime_label.config(\n",
        "                text=f\"Selected: {combined.strftime('%Y-%m-%d %H:%M')}\",\n",
        "                fg=self.get_color('success')\n",
        "            )\n",
        "        elif self.selected_date:\n",
        "            self.datetime_label.config(\n",
        "                text=f\"Date: {self.selected_date.strftime('%Y-%m-%d')}\",\n",
        "                fg=self.get_color('warning')\n",
        "            )\n",
        "        elif self.selected_time:\n",
        "            self.datetime_label.config(\n",
        "                text=f\"Time: {self.selected_time.strftime('%H:%M')}\",\n",
        "                fg=self.get_color('warning')\n",
        "            )\n",
        "\n",
        "    def add_task(self):\n",
        "        task_name = self.task_var.get().strip()\n",
        "\n",
        "        if not task_name:\n",
        "            self.show_snackbar(\"Please enter a task name!\")\n",
        "            return\n",
        "\n",
        "        if not self.selected_date or not self.selected_time:\n",
        "            self.show_snackbar(\"Please select both date and time!\")\n",
        "            return\n",
        "\n",
        "        # Combine date and time\n",
        "        task_datetime = datetime(\n",
        "            self.selected_date.year, self.selected_date.month, self.selected_date.day,\n",
        "            self.selected_time.hour, self.selected_time.minute\n",
        "        )\n",
        "\n",
        "        # Add task\n",
        "        task_data = {\n",
        "            'name': task_name,\n",
        "            'datetime': task_datetime.isoformat(),\n",
        "            'id': f\"{task_name}_{task_datetime.timestamp()}\"\n",
        "        }\n",
        "        self.tasks.append(task_data)\n",
        "\n",
        "        # Update UI\n",
        "        self.refresh_tasks_list()\n",
        "\n",
        "        # Clear inputs\n",
        "        self.task_var.set(\"\")\n",
        "        self.selected_date = None\n",
        "        self.selected_time = None\n",
        "        self.datetime_label.config(text=\"No date/time selected\", fg=self.get_color('secondary'))\n",
        "\n",
        "        self.save_tasks()\n",
        "        self.show_snackbar(f\"Task '{task_name}' added!\")\n",
        "\n",
        "    def refresh_tasks_list(self):\n",
        "        # Clear existing tasks\n",
        "        for widget in self.scrollable_frame.winfo_children():\n",
        "            widget.destroy()\n",
        "\n",
        "        # Add tasks to list with modern cards\n",
        "        for task in self.tasks:\n",
        "            task_card = tk.Frame(self.scrollable_frame, bg=self.get_color('card'),\n",
        "                                 relief='flat', bd=1, padx=15, pady=12)\n",
        "            task_card.pack(fill=tk.X, pady=4, padx=2)\n",
        "\n",
        "            # Task content\n",
        "            task_datetime = datetime.fromisoformat(task['datetime'])\n",
        "            time_until = task_datetime - datetime.now()\n",
        "\n",
        "            # Main task info\n",
        "            main_frame = tk.Frame(task_card, bg=self.get_color('card'))\n",
        "            main_frame.pack(fill=tk.X)\n",
        "\n",
        "            task_name_label = tk.Label(main_frame, text=task['name'],\n",
        "                                       bg=self.get_color('card'),\n",
        "                                       fg=self.get_color('text'),\n",
        "                                       font=('Arial', 11, 'bold'),\n",
        "                                       anchor='w')\n",
        "            task_name_label.pack(fill=tk.X)\n",
        "\n",
        "            # Time info\n",
        "            time_frame = tk.Frame(main_frame, bg=self.get_color('card'))\n",
        "            time_frame.pack(fill=tk.X, pady=(5, 0))\n",
        "\n",
        "            time_label = tk.Label(time_frame,\n",
        "                                  text=f\"üìÖ {task_datetime.strftime('%Y-%m-%d %H:%M')}\",\n",
        "                                  bg=self.get_color('card'),\n",
        "                                  fg=self.get_color('secondary'),\n",
        "                                  font=('Arial', 9),\n",
        "                                  anchor='w')\n",
        "            time_label.pack(side=tk.LEFT)\n",
        "\n",
        "            # Delete button (modern icon button)\n",
        "            delete_btn = tk.Button(time_frame, text=\"üóëÔ∏è\",\n",
        "                                   command=lambda t=task: self.delete_task(t),\n",
        "                                   font=('Arial', 10), bg=self.get_color('error'),\n",
        "                                   fg='white', relief='flat', width=3,\n",
        "                                   cursor='hand2')\n",
        "            delete_btn.pack(side=tk.RIGHT)\n",
        "\n",
        "        self.update_tasks_count()\n",
        "\n",
        "    def update_tasks_count(self):\n",
        "        count = len(self.tasks)\n",
        "        self.tasks_count_label.config(text=f\"{count} task{'s' if count != 1 else ''}\")\n",
        "\n",
        "    def delete_task(self, task):\n",
        "        # Show confirmation dialog\n",
        "        if messagebox.askyesno(\"Confirm Delete\",\n",
        "                               f\"Are you sure you want to delete '{task['name']}'?\",\n",
        "                               icon='warning'):\n",
        "            self.tasks = [t for t in self.tasks if t['id'] != task['id']]\n",
        "            self.refresh_tasks_list()\n",
        "            self.save_tasks()\n",
        "            self.show_snackbar(\"Task deleted\")\n",
        "\n",
        "    def reset_all_tasks(self):\n",
        "        if not self.tasks:\n",
        "            self.show_snackbar(\"No tasks to delete!\")\n",
        "            return\n",
        "\n",
        "        if messagebox.askyesno(\"Confirm Reset\",\n",
        "                               \"Are you sure you want to delete ALL tasks?\\nThis cannot be undone!\",\n",
        "                               icon='warning'):\n",
        "            self.tasks.clear()\n",
        "            self.refresh_tasks_list()\n",
        "            self.save_tasks()\n",
        "            self.show_snackbar(\"All tasks deleted!\")\n",
        "\n",
        "    def start_reminder_checker(self):\n",
        "        def check_reminders():\n",
        "            while True:\n",
        "                current_time = datetime.now()\n",
        "                tasks_to_remove = []\n",
        "\n",
        "                for task in self.tasks:\n",
        "                    try:\n",
        "                        task_time = datetime.fromisoformat(task['datetime'])\n",
        "                        time_diff = abs((current_time - task_time).total_seconds())\n",
        "\n",
        "                        if time_diff <= 60:  # 1 minute grace period\n",
        "                            self.show_reminder(task['name'])\n",
        "                            # Mark task for removal after reminder\n",
        "                            tasks_to_remove.append(task)\n",
        "                    except:\n",
        "                        continue\n",
        "\n",
        "                # Remove tasks that triggered reminders\n",
        "                for task in tasks_to_remove:\n",
        "                    self.tasks = [t for t in self.tasks if t['id'] != task['id']]\n",
        "                    self.save_tasks()\n",
        "\n",
        "                if tasks_to_remove:\n",
        "                    self.root.after(0, self.refresh_tasks_list)\n",
        "\n",
        "                time.sleep(60)  # Check every minute\n",
        "\n",
        "        thread = threading.Thread(target=check_reminders, daemon=True)\n",
        "        thread.start()\n",
        "\n",
        "    def show_reminder(self, task_name):\n",
        "        def show():\n",
        "            self.show_snackbar(f\"üîî Reminder: {task_name}\", 5000)\n",
        "\n",
        "        self.root.after(0, show)\n",
        "\n",
        "    def show_snackbar(self, message, duration=3000):\n",
        "        self.snackbar.show(message, duration)\n",
        "\n",
        "    def save_tasks(self):\n",
        "        try:\n",
        "            data = {\n",
        "                'tasks': self.tasks,\n",
        "                'last_saved': datetime.now().isoformat(),\n",
        "                'dark_mode': self.dark_mode,\n",
        "                'total_tasks': len(self.tasks)\n",
        "            }\n",
        "            with open(self.tasks_file, 'w') as f:\n",
        "                json.dump(data, f, indent=2)\n",
        "        except Exception as e:\n",
        "            print(f\"Error saving tasks: {e}\")\n",
        "\n",
        "    def load_tasks(self):\n",
        "        try:\n",
        "            if os.path.exists(self.tasks_file):\n",
        "                with open(self.tasks_file, 'r') as f:\n",
        "                    data = json.load(f)\n",
        "\n",
        "                self.tasks = data.get('tasks', [])\n",
        "                self.dark_mode = data.get('dark_mode', False)\n",
        "\n",
        "                if self.dark_mode:\n",
        "                    self.theme_btn.config(text=\"‚òÄÔ∏è\")\n",
        "                    self.apply_theme()\n",
        "\n",
        "                self.refresh_tasks_list()\n",
        "                self.show_snackbar(f\"Loaded {len(self.tasks)} tasks\")\n",
        "\n",
        "        except Exception as e:\n",
        "            print(f\"Error loading tasks: {e}\")\n",
        "\n",
        "\n",
        "def main():\n",
        "    root = tk.Tk()\n",
        "    app = TaskReminderApp(root)\n",
        "    root.mainloop()\n",
        "\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()"
      ]
    }
  ]
}